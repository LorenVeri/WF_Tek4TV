@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Microsoft.AspNetCore.Http;
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<script>
    const backendUrl = @Json.Serialize(@Configuration.GetSection("Domain").GetSection("Backend").Value);
</script>

<div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog" style="position: absolute; left: 32%; bottom: 20%;">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
				<h4 class="modal-title">Modal title</h4>
			</div>
			<div class="modal-body">
					Lưu thành công
			</div>
			<div class="modal-footer">
				<button type="button" class="btn blue">Save changes</button>
				<button type="button" class="btn default" data-dismiss="modal">Close</button>
			</div>
		</div>
		<!-- /.modal-content -->
	</div>
	<!-- /.modal-dialog -->
</div>
<!-- END STYLE CUSTOMIZER -->
<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">Dashboard</h3>
<div class="page-bar">
	<ul class="page-breadcrumb">
		<li>
			<i class="fa fa-home"></i>
			<a href="/Home">Trang chủ</a>
			<i class="fa fa-angle-right"></i>
		</li>
		<li>
			<a href="#">Dashboard</a>
		</li>
	</ul>
	<div class="page-toolbar">
		<div id="dashboard-report-range" class="tooltips btn btn-fit-height btn-sm green-haze btn-dashboard-daterange" data-container="body" data-placement="left" data-original-title="Change dashboard date range">
			<i class="icon-calendar"></i>
			&nbsp;&nbsp; <i class="fa fa-angle-down"></i>
		</div>
	</div>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN DASHBOARD STATS -->
<div class="row">
	<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
		<a class="dashboard-stat dashboard-stat-light blue-soft" href="javascript:;">
		<div class="visual">
			<i class="fa fa-comments"></i>
		</div>
		<div class="details">
			<div class="number">
					1349
			</div>
			<div class="desc">
				Quy trình
			</div>
		</div>
		</a>
	</div>
	<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
		<a class="dashboard-stat dashboard-stat-light red-soft" href="javascript:;">
		<div class="visual">
			<i class="fa fa-trophy"></i>
		</div>
		<div class="details">
			<div class="number">
					12,5M$
			</div>
			<div class="desc">
					Total Profit
			</div>
		</div>
		</a>
	</div>
	<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
		<a class="dashboard-stat dashboard-stat-light green-soft" href="javascript:;">
		<div class="visual">
			<i class="fa fa-shopping-cart"></i>
		</div>
		<div class="details">
			<div class="number">
					549
			</div>
			<div class="desc">
					New Orders
			</div>
		</div>
		</a>
	</div>
	<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
		<a class="dashboard-stat dashboard-stat-light purple-soft" href="javascript:;">
		<div class="visual">
			<i class="fa fa-globe"></i>
		</div>
		<div class="details">
			<div class="number">
					+89%
			</div>
			<div class="desc">
					Brand Popularity
			</div>
		</div>
		</a>
	</div>
</div>
<!-- END DASHBOARD STATS -->
<div class="clearfix">
</div>
<div class="row">
	<div class="col-md-6 col-sm-6">
		<div class="portlet light tasks-widget">
			<div class="portlet-title">
				<div class="caption">
					<i class="icon-share font-green-haze hide"></i>
					<span class="caption-subject font-green-haze bold uppercase">Quy trình</span>
				</div>
				<div class="actions">
					<div class="btn-group">
						<a class="btn green-haze btn-circle btn-sm" href="javascript:;" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
						Chức năng <i class="fa fa-angle-down"></i>
						</a>
						<ul class="dropdown-menu pull-right">
							<li>
								<a href="~/them-moi/"> Thêm mới </a>
							</li>
							<li>
								<a href="~/sap-xep/"> Tên </a>
							</li>
							<li>
								<a href="~/sap-xep/">
								Mới nhất </a>
							</li>
							<li>
								<a href="~/sap-xep/">
								Cũ nhất </a>
							</li>
							<li>
								<a href="~/sap-xep/">
								Đã ẩn </a>
							</li>
						</ul>
					</div>
					<a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;">
					</a>
				</div>
			</div>
			<div class="portlet-body">
				<div class="task-content">
					<div class="scroller" style="height: 305px;" data-always-visible="1" data-rail-visible1="1">
						<!-- START TASK LIST -->
						<ul class="task-list" data-bind="foreach: $root.produceList">
							<li style="display: flex;">
								<div class="checker" style="margin-right: 10px !important;">
									<span data-bind="css:{checked: selected}">
										<input id="checked" type="checkbox" class="liChild" data-bind="checked: selected">
									</span>
								</div>
								<div style="width: 70%" class="task-title col-12">
									<div class="col-md-10">
										<span class="task-title-sp" data-bind="text: name;"></span>
									</div>
									<div class="col-md-2">
										<span class="task-title-sp" data-bind="text: moment(createAt()).format('DD/MM/YYYY')"></span>
									</div>
								</div>
								<div class="task-config">
									<div class="task-config-btn btn-group">
										<a class="btn btn-xs default" href="javascript:;" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
										<i class="fa fa-cog"></i><i class="fa fa-angle-down"></i>
										</a>
										<ul class="dropdown-menu pull-right">
											<li>
												<a href="javascript:;">
												<i class="fa fa-check"></i> Complete </a>
											</li>
											<li>
												<a data-bind="attr: { href: '/work-flow/' + id() +'-' + name()}">
												<i class="fa fa-pencil"></i> Chỉnh sửa </a>
											</li>
											<li data-bind="click: $root.deleteProcedure">
												<a href="javascript:;">
												<i class="fa fa-trash-o"></i> Xóa </a>
											</li>
										</ul>
									</div>
								</div>
							</li>
						</ul>
						<!-- END START TASK LIST -->
					</div>
				</div>
				<div class="task-footer">
					<div class="btn-arrow-link pull-right">
						<button class="btn btn-purple" type="button">Ẩn</button>
						<button class="btn btn-purple" type="button">Hiện thị</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
@section scripts
{
    <script src="~/js/Home/Home.js"></script>
}